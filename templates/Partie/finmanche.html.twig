{% extends 'base.html.twig' %}
{% block body %}
<section class="main-contenu">
    <div class="logo">
        <div class="image">
            <img src="img/logo.svg" alt="logo A la conquête du Graal">
        </div>
        <div class="titre">
            <h1>
                Manche terminée
            </h1>
        </div>
    </div>
</section>
<section class="jouer col-md-10" style="margin-left:auto; margin-right:auto; margin-top:15px;">
    <div class="bouton1 col-md-10">
        <p style="color:white; margin-top:15px;">
            Le score pour gagner n'est pas atteint par l'un des deux joueurs, vous devez donc rejouer une nouvelle manche.
        </p>
        <h2>
            <div class="link-one">
                <p>
                    <!-- Nom joueur -->
                    {{ partie.j1.pseudo }}

                    <!-- Score -->
                    {{ partie.scoreJ1 }}
                </p>
                <p>
                    <!-- Nom joueur -->
                    {{ partie.j2.pseudo }}

                    <!-- Score -->
                    {{ partie.scoreJ2 }}
                </p>
            </div>
        </h2>
        <button class="nv-tour">
            <a href="{{ path('afficher_partie', {'id': partie.id}) }}"></a>
        </button>
    </div>

</section>

{% endblock %}
